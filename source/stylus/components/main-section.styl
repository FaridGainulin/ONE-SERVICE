.main-section
  background-color #030101
  overflow hidden

  &__container
    position relative
    z-index 1
    padding 20px 0 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0 30px
    +above($breakpoints.md)
      padding 90px 0 40px
    +above($breakpoints.xxl)
      padding 140px 0 50px
    &:after
      content: ""
      position: absolute
      z-index -2
      background-color $color-violet
      filter: blur(22px);
      border-radius: 100%;
      transform: rotate(36deg);
      width: 8%;
      height: 100%;
      bottom: 0
      right: 40px
      +above($breakpoints.sm)
        filter: blur(35px);
        bottom: 40px;
        right: 108px;
      +above($breakpoints.md)
        right: 178px;
      +above($breakpoints.xxl)
        right: 185px;

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin-top 20px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 15px
      margin-top 30px
    +above($breakpoints.md)
      gap: 18px
      margin-top 50px
    +above($breakpoints.xxl)
      gap: 20px
      margin-top 96px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 6px
    +above($breakpoints.md)
      gap: 7px
    +above($breakpoints.xxl)
      gap: 8px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 274px !important

  &__agree-wrapper
    width 100% !important
    margin-top 3px
    +above($breakpoints.sm)
      margin 0
      padding-left 10px
    +above($breakpoints.md)
      padding-left 15px
    +above($breakpoints.xxl)
      padding-left 22px

  &__img
    width: 280px;
    height: auto;
    margin: -20px 0 0 21px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 450px;
      bottom: 0;
      right: -13px;
    +above($breakpoints.md)
      width: 580px;
      right: 12px;
    +above($breakpoints.xxl)
      width 729px
      right: -19px
