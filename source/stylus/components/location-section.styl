.location-section
  background-image: url('../images/location-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #030101

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 40px 0 30px
    +above($breakpoints.md)
      padding 80px 0 70px
    +above($breakpoints.xxl)
      padding 120px 0 95px

  &__icon
    position: absolute
    z-index -1
    width: 50px;
    height: 77px
    bottom: 197px;
    right: -10px;
    +above($breakpoints.sm)
      width: 60px;
      height: 92px
      bottom: 187px;
      right: 109px;
    +above($breakpoints.md)
      width: 80px;
      height: 122px
      bottom: 295px;
      right: 155px;
    +above($breakpoints.xxl)
      width 118px
      height: 180px
      bottom: 384px
      right: 155px

  &__title,
  &__sub-title,
  &__bottom-text
    text-align: center

  &__title,
  &__text,
  &__bottom-text
    color: $color-white-text

  &__sub-title
    padding 15px 0 20px
    +above($breakpoints.sm)
      padding 30px 0 40px
    +above($breakpoints.md)
      padding 60px 0 70px
    +above($breakpoints.xxl)
      padding 80px 0 110px

  &__text
    +above($breakpoints.sm)
      padding-left 70px
    +above($breakpoints.md)
      padding-left 97px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    margin 20px 0 0
    +above($breakpoints.sm)
      width max-content
      margin 30px auto 0
    +above($breakpoints.md)
      margin 50px auto 0
    +above($breakpoints.xxl)
      margin 87px auto 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin 15px 0 10px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 10px
      margin 20px 0 12px
    +above($breakpoints.md)
      gap: 15px
      margin 30px 0 15px
    +above($breakpoints.xxl)
      gap: 22px
      margin 42px 0 15px

  &__agree-wrapper
    +above($breakpoints.sm)
      width 100%
      display: flex
      justify-content flex-end

.input-city-position
  margin-top: -1px;
  margin-left: -27px;
  +above($breakpoints.sm)
    margin-left: -16px;
  +above($breakpoints.md)
    margin-left: -21px;
  +above($breakpoints.xxl)
    margin-left: -27px;

.location-item
  width 280px !important
  +above($breakpoints.sm)
    width 235px !important
  +above($breakpoints.md)
    width 300px !important
  +above($breakpoints.xxl)
    width 378px !important
