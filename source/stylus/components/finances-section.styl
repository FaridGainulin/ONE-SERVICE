.finances-section
  background-color #020202
  overflow hidden

  &__container
    position relative
    z-index 1
    text-align: center
    padding-bottom 20px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 65px
    &:after
      content: ""
      position: absolute
      z-index -2
      background-color $color-violet
      filter: blur(22px);
      border-radius: 100%;
      transform: rotate(36deg);
      width: 8%;
      height: 100%;
      bottom: 0
      left: -10px
      +above($breakpoints.sm)
        filter: blur(35px);
        bottom: -20px;
        left: 20px;
      +above($breakpoints.md)
        left: 52px;
        bottom: -30px;
      +above($breakpoints.xxl)
        left: 69px;

  &__block
    background-color #292929
    border-radius: 15px
    padding 20px 5px 5px
    +above($breakpoints.sm)
      border-radius: 20px
      padding 30px 10px
    +above($breakpoints.md)
      border-radius: 25px
      padding 60px 10px
    +above($breakpoints.xxl)
      border-radius: 30px
      padding 90px 10px 93px

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 20px
    +above($breakpoints.md)
      padding-bottom 40px
    +above($breakpoints.xxl)
      padding-bottom 56px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 24px

  &__card
    width 280px !important
    height: 90px
    background-color #1D1D1D
    box-shadow: 3px 3px 4px 0 #5200FE
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      box-shadow: 4px 4px 4px 0 #5200FE
      gap: 13px
      width 200px !important
      height: 96px
    +above($breakpoints.md)
      box-shadow: 5px 5px 4px 0 #5200FE
      gap: 15px
      width: 270px !important;
      height: 125px
    +above($breakpoints.xxl)
      box-shadow: 6px 6px 4px 0 #5200FE
      gap: 17px
      width 320px !important
      height: 150px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    margin-top 15px
    +above($breakpoints.sm)
      gap: 16px
      margin-top 30px
    +above($breakpoints.md)
      gap: 20px
      margin-top 50px
    +above($breakpoints.xxl)
      gap: 22px
      margin-top 70px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 6px
    +above($breakpoints.md)
      gap: 7px
    +above($breakpoints.xxl)
      gap: 8px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 274px !important
