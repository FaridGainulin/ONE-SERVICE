.reasons-section
  background-color #030101

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0
    +above($breakpoints.md)
      padding 60px 0
    +above($breakpoints.xxl)
      padding 120px 0

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 74px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 24px

  &__card,
  &__text,
  &__bottom
    color: $color-white-text

  &__card
    width 280px !important
    +above($breakpoints.sm)
      width max-content !important

  &__text
    padding 5px 0 15px
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 50px 0 25px
    +above($breakpoints.xxl)
      padding 87px 0 37px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 30px
    +above($breakpoints.md)
      gap: 50px
    +above($breakpoints.xxl)
      gap: 79px

  &__btn
    width 280px !important
    +above($breakpoints.sm)
      width 240px !important
    +above($breakpoints.md)
      width 280px !important
    +above($breakpoints.xxl)
      width 317px !important

  &__img
    width 280px
    height: auto
    margin: -10px 0 0 12px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 390px;
      bottom: 66px;
      right: 0px;
    +above($breakpoints.md)
      width: 530px;
      bottom: 95px;
      right: 5px;
    +above($breakpoints.xxl)
      width 651px
      bottom: 163px
      right: 6px
