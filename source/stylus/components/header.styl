.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    padding-top 10px
    +above($breakpoints.sm)
      padding-top 15px
    +above($breakpoints.md)
      padding-top 18px
    +above($breakpoints.xxl)
      padding-top 20px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 20px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 29px

  &__logo
    width 65px
    height: 65px
    +above($breakpoints.sm)
      width 80px
      height: 80px
    +above($breakpoints.md)
      width 90px
      height: 90px
    +above($breakpoints.xxl)
      width 100px
      height: 100px

  &__brand-mobile
    +above($breakpoints.sm)
      display: none

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 3px
    +above($breakpoints.md)
      gap: 4px
    +above($breakpoints.xxl)
      gap: 5px

  &__brand-mobile
    padding 10px 0
    margin 5px 0
    text-align: center
    background-color #292929
