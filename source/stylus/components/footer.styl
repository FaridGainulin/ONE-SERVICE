.footer

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding-bottom 14px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.md)
      gap: 25px
    +above($breakpoints.xxl)
      gap: 29px

  &__logo
    width 65px
    height: 65px
    +above($breakpoints.sm)
      width 80px
      height: 80px
    +above($breakpoints.md)
      width 90px
      height: 90px
    +above($breakpoints.xxl)
      width 100px
      height: 100px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 3px
    +above($breakpoints.md)
      gap: 4px
    +above($breakpoints.xxl)
      gap: 5px

  &__privacy
    cursor pointer
    text-decoration: underline
    +above($breakpoints.sm)
      margin 19px 0 0 0
    +above($breakpoints.md)
      margin 21px 110px 0 0
    +above($breakpoints.xxl)
      margin 25px 120px 0 0
